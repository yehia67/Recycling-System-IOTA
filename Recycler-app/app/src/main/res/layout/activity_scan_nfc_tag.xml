<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nfc"
    tools:context=".ScanNfcTag">


    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">
        <Space android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
        <TextView android:textSize="30dp" android:gravity="center" android:id="@+id/textView" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/scanNfcTextView" android:layout_weight="9"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>